  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "if (pm.response.json().data && pm.response.json().data.token) {",
          "    pm.environment.set('authToken', pm.response.json().data.token);",
          "}",
          "",
          "if (pm.response.json().data && pm.response.json().data.refreshToken) {",
          "    pm.environment.set('refreshToken', pm.response.json().data.refreshToken);",
          "}"
        ]
      }
