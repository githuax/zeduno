FROM node:20-alpine

WORKDIR /app

# Install additional tools for development
RUN apk add --no-cache curl

# Install dependencies first for better caching
COPY package*.json ./
RUN npm install

# Install development dependencies globally
RUN npm install -g nodemon ts-node typescript

# Copy source code
COPY . .

# Create logs directory
RUN mkdir -p logs

# Create development environment file
RUN echo "NODE_ENV=development" > .env && \
    echo "PORT=5000" >> .env && \
    echo "HOST=0.0.0.0" >> .env && \
    echo "MONGODB_URI=mongodb://zeduno-mongodb:27017/zeduno" >> .env && \
    echo "JWT_SECRET=dev-secret-key" >> .env && \
    echo "JWT_REFRESH_SECRET=dev-refresh-secret" >> .env && \
    echo "FRONTEND_URL=http://localhost:3000" >> .env && \
    echo "LOG_LEVEL=debug" >> .env

# Expose ports
EXPOSE 5000 9229

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:5000/api/health || exit 1

# Development command with debugging enabled
CMD ["npm", "run", "dev:debug"]